---
import BaseLayout from '../layouts/BaseLayout.astro';
import ClientLogos from '../components/ClientLogos.astro';
import CaseStudies from '../components/CaseStudies.astro';
import Testimonials from '../components/Testimonials.astro';
---

<BaseLayout
  title="Professional 3D Scanning & Drone Services"
  description="Industry-leading 3D laser scanning, Matterport virtual tours, and commercial drone services for real estate, architecture, and construction. 24-hour turnaround, 1cm accuracy. Serving Miami, NYC, and LA."
  keywords="3D scanning services, matterport virtual tours, commercial drone services, scan to bim, laser scanning, drone photogrammetry"
>
  <!-- Hero Section -->
  <section class="relative min-h-[600px] bg-gradient-to-br from-blue-600 via-purple-600 to-blue-800 overflow-hidden pt-20">
    <!-- Background Pattern Overlay -->
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0 opacity-5">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
      </svg>
    </div>

    <!-- Content Container -->
    <div class="relative z-10 container mx-auto px-4 py-20 flex items-center min-h-[600px]">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Glass Card for Hero Content -->
        <div class="backdrop-blur-lg bg-white/10 border border-white/20 rounded-2xl p-8 lg:p-12 shadow-2xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white leading-tight">
            The Only 3D Scanning Company That Does It All
          </h1>
          <p class="text-xl md:text-2xl mb-6 text-white/90 leading-relaxed font-medium">
            Drones + Scanning + BIM + Matterport • Serving All 50 States • Latest 2025 Equipment
          </p>
          <p class="text-lg md:text-xl mb-8 text-white/80 leading-relaxed max-w-3xl mx-auto">
            Transform properties into detailed digital twins with cutting-edge LiDAR, photogrammetry, and Matterport technology. From survey to BIM in 24 hours.
          </p>
          
          <!-- Key Differentiators -->
          <div class="flex gap-3 justify-center flex-wrap mb-8">
            <span class="backdrop-blur-lg bg-white/20 border border-white/30 px-4 py-2 rounded-lg text-sm font-semibold text-white flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              All Services in One
            </span>
            <span class="backdrop-blur-lg bg-white/20 border border-white/30 px-4 py-2 rounded-lg text-sm font-semibold text-white flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              50 States Coverage
            </span>
            <span class="backdrop-blur-lg bg-white/20 border border-white/30 px-4 py-2 rounded-lg text-sm font-semibold text-white flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
              </svg>
              Latest 2025 Equipment
            </span>
            <span class="backdrop-blur-lg bg-white/20 border border-white/30 px-4 py-2 rounded-lg text-sm font-semibold text-white flex items-center gap-2">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
              24-Hour Turnaround
            </span>
          </div>
          
          <!-- Button Group -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/contact" 
              class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 text-center"
            >
              Get Free Quote
            </a>
            <a 
              href="/services" 
              class="backdrop-blur-lg bg-white/10 border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-all duration-300 text-center"
            >
              View Services
            </a>
            <a 
              href="tel:+13479981464"
              class="flex items-center justify-center gap-2 backdrop-blur-lg bg-white/10 border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-all duration-300"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span>Call: (347) 998-1464</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Animated Floating Shapes -->
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-white/5 rounded-full blur-3xl animate-float"></div>
    <div class="absolute top-20 right-1/4 w-48 h-48 bg-purple-500/5 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
  </section>

    <!-- Client Logos Section -->
    <ClientLogos />

    <!-- Services Overview -->
    <section class="py-20 lg:py-32 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold mb-6 text-gray-900">
            Comprehensive Reality Capture Solutions
          </h2>
          <p class="text-center text-gray-600 text-lg max-w-2xl mx-auto leading-relaxed">
            Industry-leading services powered by the latest 2025 technology
          </p>
        </div>
        <div class="grid md:grid-cols-2 gap-8 lg:gap-10 max-w-5xl mx-auto">
          <!-- Service 1 -->
          <div class="group backdrop-blur-lg bg-white/5 border border-white/10 rounded-2xl p-10 shadow-xl hover:shadow-2xl hover:bg-white/10 transition-all duration-300 hover:-translate-y-2">
            <h3 class="text-2xl font-bold mb-5 text-gray-900">3D Laser Scanning</h3>
            <p class="text-gray-600 mb-8 leading-relaxed text-base">
              Capture precise as-built conditions with Trimble X12 and Matterport Pro 3 scanners. Perfect for architects, engineers, and BIM professionals.
            </p>
            <a href="/3d-scan-to-bim" class="inline-flex items-center text-blue-600 font-semibold hover:text-purple-600 transition-colors duration-300">
              Learn More
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>

          <!-- Service 2 -->
          <div class="group backdrop-blur-lg bg-white/5 border border-white/10 rounded-2xl p-10 shadow-xl hover:shadow-2xl hover:bg-white/10 transition-all duration-300 hover:-translate-y-2">
            <h3 class="text-2xl font-bold mb-5 text-gray-900">Matterport Virtual Tours</h3>
            <p class="text-gray-600 mb-8 leading-relaxed text-base">
              Immersive 3D walkthroughs for real estate, hospitality, and retail. Boost engagement with 24-hour delivery and Google Maps integration.
            </p>
            <a href="/3d-virtual-tour" class="inline-flex items-center text-blue-600 font-semibold hover:text-purple-600 transition-colors duration-300">
              Learn More
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>

          <!-- Service 3 -->
          <div class="group backdrop-blur-lg bg-white/5 border border-white/10 rounded-2xl p-10 shadow-xl hover:shadow-2xl hover:bg-white/10 transition-all duration-300 hover:-translate-y-2">
            <h3 class="text-2xl font-bold mb-5 text-gray-900">Drone Photogrammetry & LiDAR</h3>
            <p class="text-gray-600 mb-8 leading-relaxed text-base">
              High-precision aerial mapping with DJI Matrice 400 RTK and Zenmuse L3 LiDAR. Ideal for construction, surveying, and site documentation.
            </p>
            <a href="/drone" class="inline-flex items-center text-blue-600 font-semibold hover:text-purple-600 transition-colors duration-300">
              Learn More
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>

          <!-- Service 4 -->
          <div class="group backdrop-blur-lg bg-white/5 border border-white/10 rounded-2xl p-10 shadow-xl hover:shadow-2xl hover:bg-white/10 transition-all duration-300 hover:-translate-y-2">
            <h3 class="text-2xl font-bold mb-5 text-gray-900">Scan to BIM Services</h3>
            <p class="text-gray-600 mb-8 leading-relaxed text-base">
              Convert point clouds to Revit-ready BIM models (LOD 200-500). Streamline renovation projects with accurate as-built documentation.
            </p>
            <a href="/3d-scan-to-bim" class="inline-flex items-center text-blue-600 font-semibold hover:text-purple-600 transition-colors duration-300">
              Learn More
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
        <div class="text-center mt-12">
          <a href="/services" class="inline-block bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-3 rounded-lg font-semibold shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300">
            View All Services →
          </a>
        </div>
      </div>
    </section>

    <!-- Case Studies Section -->
    <CaseStudies limit={3} />

    <!-- Testimonials Section -->
    <Testimonials limit={3} />

    <!-- Technology Section -->
    <section class="py-16 lg:py-24 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl lg:text-4xl font-bold text-center mb-4 text-gray-900">
          Latest 2025 Technology, Unmatched Precision
        </h2>
        <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
          We invest in the most advanced equipment - no outdated technology
        </p>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Equipment 1 -->
          <div class="text-center">
            <div class="group backdrop-blur-lg bg-gradient-to-br from-white/10 to-white/5 border border-white/20 rounded-2xl p-6 mb-4 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
              <h3 class="font-bold text-lg mb-3 text-gray-900">DJI Matrice 400 RTK</h3>
              <div class="text-sm space-y-1 text-gray-600 leading-relaxed">
                <p>59-minute flight time</p>
                <p>6kg payload capacity</p>
                <p>40km transmission</p>
              </div>
            </div>
            <span class="inline-block bg-gradient-to-r from-blue-600 to-purple-600 text-white text-xs font-bold px-3 py-1 rounded">NEW 2025</span>
          </div>

          <!-- Equipment 2 -->
          <div class="text-center">
            <div class="group backdrop-blur-lg bg-gradient-to-br from-white/10 to-white/5 border border-white/20 rounded-2xl p-6 mb-4 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
              <h3 class="font-bold text-lg mb-3 text-gray-900">DJI Zenmuse L3</h3>
              <div class="text-sm space-y-1 text-gray-600 leading-relaxed">
                <p>950m detection range</p>
                <p>Dual 100MP cameras</p>
                <p>Survey-grade accuracy</p>
              </div>
            </div>
            <span class="inline-block bg-gradient-to-r from-blue-600 to-purple-600 text-white text-xs font-bold px-3 py-1 rounded">LATEST MODEL</span>
          </div>

          <!-- Equipment 3 -->
          <div class="text-center">
            <div class="group backdrop-blur-lg bg-gradient-to-br from-white/10 to-white/5 border border-white/20 rounded-2xl p-6 mb-4 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
              <h3 class="font-bold text-lg mb-3 text-gray-900">Trimble X12</h3>
              <div class="text-sm space-y-1 text-gray-600 leading-relaxed">
                <p>±1mm @ 25m accuracy</p>
                <p>365m maximum range</p>
                <p>266,000 pts/sec</p>
              </div>
            </div>
            <span class="inline-block bg-gradient-to-r from-blue-600 to-purple-600 text-white text-xs font-bold px-3 py-1 rounded">PROFESSIONAL</span>
          </div>

          <!-- Equipment 4 -->
          <div class="text-center">
            <div class="group backdrop-blur-lg bg-gradient-to-br from-white/10 to-white/5 border border-white/20 rounded-2xl p-6 mb-4 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
              <h3 class="font-bold text-lg mb-3 text-gray-900">Matterport Pro 3</h3>
              <div class="text-sm space-y-1 text-gray-600 leading-relaxed">
                <p><strong class="text-black">±20mm accuracy</strong></p>
                <p>2.75x more accurate than Pro 2</p>
                <p>10x more points/scan</p>
              </div>
            </div>
            <span class="inline-block bg-gradient-to-r from-blue-600 to-purple-600 text-white text-xs font-bold px-3 py-1 rounded">LATEST MODEL</span>
          </div>
        </div>
        <div class="text-center mt-12">
          <a href="/technology" class="text-black hover:text-gray-700 inline-flex items-center group transition-colors text-lg font-medium">
            View Complete Technology List 
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative py-24 lg:py-32 bg-gradient-to-br from-blue-600 via-purple-600 to-blue-800 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-black/10"></div>
      <div class="absolute inset-0 opacity-5">
        <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="cta-grid" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#cta-grid)" />
        </svg>
      </div>

      <!-- Content -->
      <div class="relative z-10 container mx-auto px-4">
        <div class="max-w-4xl mx-auto backdrop-blur-lg bg-white/10 border border-white/20 rounded-3xl p-12 lg:p-16 shadow-2xl text-center">
          <p class="text-white/90 uppercase tracking-wide mb-4 text-sm font-semibold">Ready to Get Started?</p>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-8 text-white leading-tight">
            Transform Your Project with 3D Scanning & Drone Technology
          </h2>
          <p class="text-xl md:text-2xl mb-12 text-white/90 max-w-2xl mx-auto leading-relaxed">
            Get a free consultation and custom quote in 24 hours
          </p>
          
          <div class="flex flex-wrap gap-6 justify-center mb-12">
            <div class="flex items-center gap-2 text-white/90">
              <span class="text-green-300 text-xl">✓</span>
              <span>Free Project Assessment</span>
            </div>
            <div class="flex items-center gap-2 text-white/90">
              <span class="text-green-300 text-xl">✓</span>
              <span>24-Hour Quote Turnaround</span>
            </div>
            <div class="flex items-center gap-2 text-white/90">
              <span class="text-green-300 text-xl">✓</span>
              <span>No Obligation Demo</span>
            </div>
          </div>
          
          <!-- Button Group -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/contact" 
              class="bg-white text-blue-600 px-10 py-4 rounded-xl font-bold shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300"
            >
              Schedule Free Consultation
            </a>
            <a 
              href="tel:+13479981464" 
              class="backdrop-blur-lg bg-white/20 border-2 border-white/40 text-white px-10 py-4 rounded-xl font-bold hover:bg-white/30 transition-all duration-300"
            >
              Call Now: (347) 998-1464
            </a>
          </div>
          
          <p class="mt-6 text-white/80 text-sm">
            Serving Miami, NYC, Los Angeles, and nationwide
          </p>
        </div>
      </div>

      <!-- Animated Shapes -->
      <div class="absolute top-10 left-10 w-40 h-40 bg-white/5 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-10 right-10 w-48 h-48 bg-purple-500/5 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
    </section>
</BaseLayout>
