---
// Case Studies Component - Displays featured project case studies

interface Props {
  limit?: number;
  industry?: string;
}

const { limit = 3, industry } = Astro.props;

const caseStudies = [
  {
    title: "Miami Beach Luxury Condo - Matterport Tour",
    industry: "Real Estate",
    description: "Complete 3D virtual tour for luxury condominium sales. Generated 500+ views in first week, leading to multiple showings and faster sales cycle.",
    image: "/images/case-studies/miami-beach-condo.jpg",
    url: "/case-studies/miami-beach-condo"
  },
  {
    title: "Historic Building Renovation - Scan to BIM",
    industry: "Architecture",
    description: "As-built documentation for 1920s building renovation. Delivered Revit models in 48 hours, enabling accurate renovation planning and cost estimation.",
    image: "/images/case-studies/historic-building.jpg",
    url: "/case-studies/historic-building"
  },
  {
    title: "Construction Progress Tracking - Drone Mapping",
    industry: "Construction",
    description: "Monthly drone surveys for 50-acre development. Improved progress reporting accuracy by 40% and reduced site visit time by 60%.",
    image: "/images/case-studies/construction-tracking.jpg",
    url: "/case-studies/construction-tracking"
  },
  {
    title: "Commercial Property Documentation - 3D Scanning",
    industry: "Property Management",
    description: "Complete facility documentation for 200,000 sqft commercial building. Created comprehensive BIM model for maintenance and space planning.",
    image: "/images/case-studies/commercial-property.jpg",
    url: "/case-studies/commercial-property"
  },
  {
    title: "Insurance Claim Documentation - Drone Inspection",
    industry: "Insurance",
    description: "Rapid damage assessment using drone LiDAR for insurance claim. Delivered detailed 3D model and damage report within 24 hours.",
    image: "/images/case-studies/insurance-claim.jpg",
    url: "/case-studies/insurance-claim"
  },
  {
    title: "Retail Space Planning - Virtual Tour",
    industry: "Retail",
    description: "Interactive 3D tour for retail space leasing. Enabled remote viewings and reduced time-to-lease by 30%.",
    image: "/images/case-studies/retail-space.jpg",
    url: "/case-studies/retail-space"
  }
].filter(cs => !industry || cs.industry === industry).slice(0, limit);
---

<section class="py-16 lg:py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        Featured Projects
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        See how we've helped clients across industries achieve their goals with cutting-edge 3D scanning and virtual tour technology
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {caseStudies.map((study) => (
        <a 
          href={study.url}
          class="group backdrop-blur-lg bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300"
        >
          <div class="aspect-video overflow-hidden bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center">
            {/* Placeholder for image - replace with actual image when available */}
            <div class="text-center p-8">
              <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="text-gray-500 text-sm">Case Study Image</p>
            </div>
            {/* Uncomment when images are available:
            <img 
              src={study.image}
              alt={study.title}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
            />
            */}
          </div>
          <div class="p-6">
            <span class="inline-block text-xs font-semibold text-blue-600 bg-blue-50 px-3 py-1 rounded-full mb-3">
              {study.industry}
            </span>
            <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
              {study.title}
            </h3>
            <p class="text-gray-600 mb-4 line-clamp-2">
              {study.description}
            </p>
            <span class="inline-flex items-center text-blue-600 font-semibold group-hover:gap-2 transition-all">
              View Case Study
              <svg class="w-5 h-5 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
          </div>
        </a>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/case-studies"
        class="inline-flex items-center text-blue-600 font-semibold hover:text-purple-600 transition-colors"
      >
        View All Case Studies â†’
      </a>
    </div>
  </div>
</section>

