---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact Us"
  description="Get your free consultation for 3D scanning and drone services. Call (347) 998-1464 or request a quote online. 24-hour response guaranteed."
  keywords="contact 3d scanning, get quote drone services, free consultation"
>
  <main class="min-h-screen">
    <!-- Hero -->
    <section class="bg-gradient-to-br from-blue-900 to-blue-700 text-white py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold mb-4">Get Your Free Consultation</h1>
        <p class="text-xl max-w-2xl mx-auto">
          Tell us about your project and we'll respond within 24 hours
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold mb-6 text-gray-900">Send Us a Message</h2>
            <form class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-semibold mb-2 text-gray-700">First Name *</label>
                  <input type="text" required class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                </div>
                <div>
                  <label class="block text-sm font-semibold mb-2 text-gray-700">Last Name *</label>
                  <input type="text" required class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                </div>
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2 text-gray-700">Email *</label>
                <input type="email" required class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2 text-gray-700">Phone *</label>
                <input type="tel" required class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2 text-gray-700">Service Interested In</label>
                <select class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option>3D Laser Scanning</option>
                  <option>Scan to BIM</option>
                  <option>Matterport Virtual Tour</option>
                  <option>Drone Mapping</option>
                  <option>Construction Tracking</option>
                  <option>Not Sure / Multiple</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2 text-gray-700">Project Location</label>
                <input type="text" placeholder="City, State" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
              </div>

              <div>
                <label class="block text-sm font-semibold mb-2 text-gray-700">Project Details</label>
                <textarea rows="5" placeholder="Tell us about your project requirements, goals, and any specific challenges..." class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
              </div>

              <div>
                <label class="flex items-center">
                  <input type="checkbox" class="mr-2" />
                  <span class="text-sm text-gray-700">I'd like to schedule a free demo</span>
                </label>
              </div>

              <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-bold text-lg">
                Get Free Quote
              </button>

              <p class="text-xs text-gray-500 text-center">
                By submitting, you agree to our Privacy Policy. We'll never share your information.
              </p>
            </form>
          </div>

          <!-- Contact Info -->
          <div>
            <h2 class="text-3xl font-bold mb-6 text-gray-900">Contact Information</h2>
            
            <div class="space-y-8">
              <!-- Phone -->
              <div>
                <h3 class="font-bold text-lg mb-2 text-gray-900">Phone</h3>
                <a href="tel:+13479981464" class="text-2xl text-blue-600 hover:text-blue-700 font-semibold">(347) 998-1464</a>
                <p class="text-sm text-gray-600 mt-1">Available 7 days a week, 24 hours</p>
                <p class="text-sm text-gray-600">Call or text for immediate assistance</p>
              </div>

              <!-- Email -->
              <div>
                <h3 class="font-bold text-lg mb-2 text-gray-900">Email</h3>
                <a href="mailto:info@thefuture3d.com" class="text-xl text-blue-600 hover:text-blue-700">info@thefuture3d.com</a>
                <p class="text-sm text-gray-600 mt-1">Response within 24 hours guaranteed</p>
              </div>

              <!-- Office Locations -->
              <div>
                <h3 class="font-bold text-lg mb-3 text-gray-900">Office Locations</h3>
                <div class="space-y-3 text-sm">
                  <div>
                    <p class="font-semibold text-gray-900">Miami Office</p>
                    <p class="text-gray-600">Serving South Florida</p>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">New York Office</p>
                    <p class="text-gray-600">Serving Tri-State Area</p>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">Los Angeles Office</p>
                    <p class="text-gray-600">Serving Southern California</p>
                  </div>
                </div>
              </div>

              <!-- Trust Indicators -->
              <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                <h3 class="font-bold mb-3 text-gray-900">Why Choose Us</h3>
                <ul class="space-y-2 text-sm">
                  <li class="flex items-center">
                    <span class="text-green-600 mr-2">✓</span>
                    <span class="text-gray-700">5+ Years Experience</span>
                  </li>
                  <li class="flex items-center">
                    <span class="text-green-600 mr-2">✓</span>
                    <span class="text-gray-700">10,000+ Projects Completed</span>
                  </li>
                  <li class="flex items-center">
                    <span class="text-green-600 mr-2">✓</span>
                    <span class="text-gray-700">24-Hour Turnaround Available</span>
                  </li>
                  <li class="flex items-center">
                    <span class="text-green-600 mr-2">✓</span>
                    <span class="text-gray-700">100% Satisfaction Guaranteed</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

