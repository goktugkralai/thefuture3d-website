---
// Trust Badges Component - Displays certifications, credentials, and trust indicators
---

<section class="py-12 lg:py-16 bg-white border-y border-gray-200">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 lg:gap-8 items-center">
      <!-- Trust Badge 1: DOE Certified -->
      <div class="flex flex-col items-center text-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-3">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
        </div>
        <div class="font-bold text-gray-900 text-sm lg:text-base">DOE Certified</div>
        <div class="text-xs text-gray-600 mt-1">Vendor</div>
      </div>
      
      <!-- Trust Badge 2: Years Experience -->
      <div class="flex flex-col items-center text-center">
        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mb-3">
          <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="font-bold text-gray-900 text-sm lg:text-base">5+ Years</div>
        <div class="text-xs text-gray-600 mt-1">Experience</div>
      </div>
      
      <!-- Trust Badge 3: Accuracy -->
      <div class="flex flex-col items-center text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-3">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="font-bold text-gray-900 text-sm lg:text-base">Â±1cm</div>
        <div class="text-xs text-gray-600 mt-1">Accuracy</div>
      </div>
      
      <!-- Trust Badge 4: Turnaround -->
      <div class="flex flex-col items-center text-center">
        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mb-3">
          <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div class="font-bold text-gray-900 text-sm lg:text-base">24-Hour</div>
        <div class="text-xs text-gray-600 mt-1">Turnaround</div>
      </div>
    </div>
    
    <!-- Additional Trust Indicators Row -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-6 lg:gap-8 items-center mt-8 pt-8 border-t border-gray-200">
      <div class="flex flex-col items-center text-center">
        <div class="text-2xl lg:text-3xl font-bold text-blue-600 mb-1">50</div>
        <div class="text-sm text-gray-600">States Served</div>
      </div>
      <div class="flex flex-col items-center text-center">
        <div class="text-2xl lg:text-3xl font-bold text-purple-600 mb-1">500+</div>
        <div class="text-sm text-gray-600">Projects Completed</div>
      </div>
      <div class="flex flex-col items-center text-center col-span-2 md:col-span-1">
        <div class="text-2xl lg:text-3xl font-bold text-green-600 mb-1">100%</div>
        <div class="text-sm text-gray-600">Client Satisfaction</div>
      </div>
    </div>
  </div>
</section>

